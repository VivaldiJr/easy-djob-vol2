<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.dlink_api_utils</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="API" id="dlink_api_utils" string="Dlink Api" data-key="dlink_api_utils">
                        <h2>General</h2>
                        <div class="row mt16 o_settings_container" id="dlink_api_utils_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>

                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">X-Api-Key Required</span>
                                    <div class="text-muted content-group mt16">
                                        <field name="api_key_required" class="text-center oe_inline"/>

                                    </div>
                                    <span class="o_form_label">X-Api-Key Header</span>
                                    <div class="text-muted content-group mt16">
                                        <field name="api_key_header" class="text-center oe_inline"/>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="dlink_api_utils_config_settings_action" model="ir.actions.act_window">
            <field name="name">Api Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'dlink_api_utils', 'bin_size': False}</field>
        </record>

        <menuitem id="dlink_api_utils_config_settings_menu"
                  name="Api Settings"
                  parent="base.menu_ir_actions_todo_form"
                  sequence="0"
                  action="dlink_api_utils_config_settings_action"
                  groups="base.group_system"/>
    </data>
</odoo>
