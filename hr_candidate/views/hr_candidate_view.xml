<odoo>
    <data>
        <!-- Heredar la vista del formulario del aplicante -->
        <record model="ir.ui.view" id="hr_applicant_view_form_inherited">
            <field name="name">Jobs - Recruitment Form Inherited</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <field name="partner_name" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="partner_name" position="after">
                    <label for="candidate_id" string="Candidate" class="oe_inline"/>
                    <field name="candidate_id"/>
                </field>
            </field>
        </record>

        <record id="view_hr_candidate_search" model="ir.ui.view">
            <field name="name">hr.candidate.search</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <search string="Candidates">
                    <field name="name" string="Candidate"
                           filter_domain="['|', ('email', 'ilike', self), ('name', 'ilike', self)]"/>
                    <field name="professional_title" string="Professional Title"
                           filter_domain="['|', ('professional_title', 'ilike', self), ('name', 'ilike', self)]"/>
                    <field name="skill_ids" widget="many2many_tags" string="Skills"/>
                    <separator/>
                    <group expand="0" string="Additional Filters">
                        <!-- Add your additional filters here -->
                        <filter name="group_age" string="Age" domain="[]" context="{'group_by': 'age'}"/>
                        <filter name="group_country" string="Country" domain="[]" context="{'group_by': 'country_id'}"/>
                        <filter name="group_highest_education" string="Highest Education Level" domain="[]"
                                context="{'group_by': 'highest_education_level'}"/>
                        <!-- Add more filters as needed -->
                    </group>
                    <group expand="0" string="Group By">
                        <filter name="group_professional_title" string="Professional Title" domain="[]"
                                context="{'group_by': 'professional_title'}"/>
                        <filter name="group_education" string="Education Level" domain="[]"
                                context="{'group_by': 'highest_education_level'}"/>
                        <filter name="group_study_area" string="Study Area" domain="[]"
                                context="{'group_by': 'area_of_study'}"/>
                    </group>
                    <searchpanel>
                        <field name="country_id" icon="fa-globe" enable_counters="1"/>
                        <field name="best_skill" icon="fa-tasks" enable_counters="1"/>
                        <field name="best_language" icon="fa-comments" enable_counters="1"/>

                    </searchpanel>
                </search>
            </field>
        </record>

        <!-- Vista Formulario para el Modelo hr.candidate -->
        <record id="view_hr_candidate_form" model="ir.ui.view">
            <field name="name">hr.candidate.form</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <form string="Candidate Information">
                    <sheet>
                        <div class="o_employee_avatar">
                            <field name="image_1920" widget="image" class="oe_avatar m-0"
                                   options='{"zoom": true, "preview_image":"avatar_128"}'/>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="address"/>
                                    <field name="city_province"/>
                                </group>
                                <group>
                                    <field name="last_name"/>
                                    <field name="phone"/>
                                    <field name="postal_code"/>
                                    <field name="age"/>
                                </group>
                            </group>

                        </div>

                        <notebook>
                            <page string="Professional Data">
                                <group>
                                    <field name="professional_title"/>
                                    <field name="skill_ids" widget="many2many_tags"/>
                                    <field name="professional_description"/>
                                </group>
                                <group>
                                    <!-- Campos para la experiencia profesional -->
                                    <field name="experience_ids">
                                        <tree>
                                            <field name="company"/>
                                            <field name="start_date"/>
                                            <field name="end_date"/>
                                            <field name="job_positions"/>
                                            <field name="achievements"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <!-- Pestaña Datos Personales -->
                            <page string="Personal Data">
                                <group>
                                    <!-- Campo País de Residencia -->
                                    <field name="country_id"/>
                                    <!-- Campo Email Verificado -->
                                    <field name="email_verified"/>
                                </group>
                            </page>
                            <!-- Pestaña Educación -->
                            <page string="Education">
                                <group>
                                    <!-- Campos para la formación escolar -->
                                    <field name="school_ids">
                                        <tree>
                                            <field name="institution"/>
                                            <field name="study_area"/>
                                            <field name="start_date"/>
                                            <field name="end_date"/>
                                            <field name="description"/>
                                            <field name="level_attained"/>
                                        </tree>
                                    </field>
                                    <!-- Campos para los cursos complementarios -->
                                    <field name="course_ids">
                                        <tree>
                                            <field name="course_name"/>
                                            <field name="start_date"/>
                                            <field name="end_date"/>
                                            <field name="description"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <!-- Pestaña Idiomas -->
                            <page string="Languages">
                                <group>
                                    <!-- Campos para los idiomas -->
                                    <field name="language_ids">
                                        <tree>
                                            <field name="language"/>
                                            <field name="level"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <!-- Pestaña Habilidades -->
                        </notebook>
                        <group>
                            <!-- Campos para el envío y visualización del perfil -->
                            <field name="resume_option"/>
                            <field name="resume_file"/>
                            <field name="employee_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_candidate_tree" model="ir.ui.view">
            <field name="name">hr.candidate.tree</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <tree string="Candidate Information">
                    <field name="name"/>
                    <field name="last_name"/>
                    <field name="professional_title"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>


        <record id="view_hr_candidate_kanban" model="ir.ui.view">
            <field name="name">hr.candidate.kanban</field>
            <field name="model">hr.candidate</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban" js_class="hr_employee_kanban" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="last_name"/>
                    <field name="professional_title"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="image_128"/>
                    <field name="overall_score"/>


                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                                <field name="image_1024" class="o_kanban_image_fill_left d-block"
                                       preview_image="image_128"
                                       widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>

                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                                <span></span>  <!-- Agrega un espacio en blanco -->
                                                <field name="last_name"/>
                                            </strong>
                                            <span t-if="record.professional_title.raw_value"
                                                  class="o_kanban_record_subtitle">
                                                <field name="professional_title"/>
                                            </span>
                                            <div t-if="record.overall_score">
                                                <field name="overall_score"/>
                                                <span>-> Score</span>
                                            </div>
                                        </div>
                                    </div>
                                    <ul>
                                        <li class="o_text_overflow">
                                            <field name="email" placeholder="Email"/>
                                        </li>
                                        <li class="o_force_ltr">
                                            <field name="phone" placeholder="Phone"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content o_hr_employee_kanban_bottom position-absolute bottom-0 start-0 end-0 me-2 pe-none">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left"/>
                                        <div class="oe_kanban_bottom_right float-end pe-auto">
                                            <div class="hr_activity_container mb-1 me-n1">
                                                <field name="activity_ids" widget="kanban_activity"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="action_view_hr_candidate" model="ir.actions.act_window">
            <field name="name">Candidates</field>
            <field name="res_model">hr.candidate</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear un nuevo empleado.
                </p>
            </field>
        </record>


        <!-- Menú para acceder al formulario del candidato -->
        <menuitem id="menu_recruitment_candidate" name="Candidates" parent="hr_recruitment.menu_hr_recruitment_root"
                  sequence="20"/>
        <menuitem id="menu_recruitment_candidate_form" name="Candidates" parent="menu_recruitment_candidate"
                  action="action_view_hr_candidate" sequence="10"/>

    </data>
</odoo>
