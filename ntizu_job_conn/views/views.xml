<odoo>
    <record model="ir.ui.view" id="view_company_tree">
        <field name="name">ntizu.company.request.tree</field>
        <field name="model">ntizu.company.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="states"/>
                <field name="representative_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_representative_tree">
        <field name="name">representative.ntizu.company.request.tree</field>
        <field name="model">representative.ntizu.company.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="position"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_member_tree">
        <field name="name">member.ntizu.company.request.tree</field>
        <field name="model">member.ntizu.company.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>


    <!-- Vista de formulário -->
    <record model="ir.ui.view" id="view_company_form">
        <field name="name">ntizu.company.request.form</field>
        <field name="model">ntizu.company.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field name="states" widget="statusbar" nolabel="1"/>
                        <button string="Enviar para Aprovação" type="object" name="action_submit_for_approval"
                                class="btn btn-outline-primary"
                                attrs="{'invisible':[('states','in',['pending','approved','rejected'])]}"/>
                        <button string="Aprovar" type="object" name="action_approve" states="pending"
                                class="btn btn-outline-primary"
                                attrs="{'invisible':[('states','in',['draft','approved','rejected'])]}"/>
                        <button string="Rejeitar" type="object" name="action_reject"
                                attrs="{'invisible':[('states','in',['draft','approved','rejected'])]}"/>
                    </header>
                    <br/>
                    <group>
                        <group>
                            <field name="name" placeholder="Nome da Empresa"/>
                            <field name="website" placeholder="https://www.exemplo.com" widget="url"/>
                            <field name="phone" placeholder="+258 8585 85858" widget="phone"/>
                        </group>
                        <group>
                            <field name="num_employees"/>
                            <field name="has_hr_department"/>
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page string="Representante da Empresa" autofocus="autofocus">
                            <field name="representative_id" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="email" widget="email"/>
                                    <field name="position"/>
                                    <field name="company_id"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <t/>
                                            <div t-att-class="oe_kanban_global_click">
                                                <div class="oe_kanban_details">
                                                    <field name="name"/>
                                                    <div t-if="record.position.raw_value">
                                                        <field name="position"/>
                                                    </div>
                                                    <div t-if="record.email.raw_value">
                                                        <field name="email" widget="email"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Convites de Membros">
                            <group>
                                <field name="member_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="internal_notes" string="Internal Notes">
                            <field name="comment" placeholder="Notas internas..."/>
                        </page>
                    </notebook>


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de formulário -->
    <record model="ir.ui.view" id="view_representative_form">
        <field name="name">representative.ntizu.company.request.form</field>
        <field name="model">representative.ntizu.company.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="password"/>
                        <field name="position"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_member_form">
        <field name="name">member.ntizu.company.request.form</field>
        <field name="model">member.ntizu.company.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Visualização Tree para "Teste de Habilidades" -->
    <record id="view_test_habilidades_tree" model="ir.ui.view">
        <field name="name">test.habilidades.tree</field>
        <field name="model">ntizu.teste.skill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="icon" widget="image"
                       options="{'size': (100, 100)}"/>
                <field name="description"/>
                <field name="test_link"/>
                <field name="is_new"/>
            </tree>
        </field>
    </record>

    <!-- Visualização Form para "Teste de Habilidades" -->
    <record id="view_test_habilidades_form" model="ir.ui.view">
        <field name="name">test.habilidades.form</field>
        <field name="model">ntizu.teste.skill</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="icon" widget="image"
                               options="{'size': (100, 100)}"/>
                        <field name="description"/>
                        <field name="test_link"/>
                        <field name="is_new"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Visualização Tree para "Formações" -->
    <record id="view_formacoes_tree" model="ir.ui.view">
        <field name="name">formacao.formacao.tree</field>
        <field name="model">ntizu.formacao</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="icon" widget="image"
                       options="{'size': (100, 100)}"/>
                <field name="description"/>
                <field name="link"/>
                <field name="is_new"/>
            </tree>
        </field>
    </record>

    <!-- Visualização Form para "Formações" -->
    <record id="view_formacoes_form" model="ir.ui.view">
        <field name="name">formacao.formacao.form</field>
        <field name="model">ntizu.formacao</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="icon" widget="image"
                               options="{'size': (100, 100)}"/> <!-- Establece las dimensiones a 50x50 píxeles -->
                        <field name="description"/>
                        <field name="link"/>
                        <field name="is_new"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_formacoes_kanban" model="ir.ui.view">
        <field name="name">formacao.formacao.kanban</field>
        <field name="model">ntizu.formacao</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <kanban class="o_hr_employee_kanban" js_class="hr_employee_kanban" sample="1">
                <field name="name"/>
                <field name="icon"/>
                <field name="description"/>
                <field name="link"/>
                <field name="is_new"/>


                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                            <field name="icon" class="o_kanban_image_fill_left d-block"
                                   preview_image="icon"
                                   widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>

                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span t-if="record.description.raw_value"
                                              class="o_kanban_record_subtitle">
                                            <field name="description"/>
                                        </span>

                                        <span t-if="record.link.raw_value"
                                              class="o_kanban_record_subtitle">
                                            <field name="link"/>
                                        </span>

                                        <div t-if="record.is_new">
                                            <span>NEW</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Ação para solicitações de empresas -->
    <record id="action_ntizu_company_requests" model="ir.actions.act_window">
        <field name="name">Solicitações de Empresas</field>
        <field name="res_model">ntizu.company.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Ação para solicitações de representantes -->
    <record id="action_ntizu_representative_requests" model="ir.actions.act_window">
        <field name="name">Solicitações de Representantes</field>
        <field name="res_model">representative.ntizu.company.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Ação para solicitações de membros -->
    <record id="action_ntizu_member_requests" model="ir.actions.act_window">
        <field name="name">Solicitações de Membros</field>
        <field name="res_model">member.ntizu.company.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Ação de visualização para "Teste de Habilidades" -->
    <record id="action_test_habilidades" model="ir.actions.act_window">
        <field name="name">Teste de Habilidades</field>
        <field name="res_model">ntizu.teste.skill</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Ação de visualização para "Formações" -->
    <record id="action_formacoes" model="ir.actions.act_window">
        <field name="name">Formações</field>
        <field name="res_model">ntizu.formacao</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Menu de nível superior -->
    <menuitem id="menu_ntizu_company" name="Ntizu Job Connection" sequence="10"
              web_icon="base,static/description/icon.png"/>

    <!-- Submenu para solicitações de empresas -->
    <menuitem id="menu_ntizu_company_requests" parent="menu_ntizu_company" name="Solicitações de Empresas" sequence="10"
              action="action_ntizu_company_requests"/>

    <!-- Submenu para solicitações de representantes -->
    <menuitem id="menu_ntizu_representative_requests" parent="menu_ntizu_company" name="Solicitações de Representantes"
              sequence="10" action="action_ntizu_representative_requests"/>

    <!-- Submenu para solicitações de membros -->
    <menuitem id="menu_ntizu_member_requests" parent="menu_ntizu_company" name="Solicitações de Membros" sequence="10"
              action="action_ntizu_member_requests"/>

    <menuitem id="menu_ntizu_test_habilidades" name="Teste de Habilidades" parent="menu_ntizu_company"
              action="action_test_habilidades" sequence="20"/>
    <menuitem id="menu_ntizu_formacoes" name="Formações" parent="menu_ntizu_company" action="action_formacoes"
              sequence="30"/>

</odoo>
